        <Label Content="Dossier contenant ma bibliothèque de musique" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.066,-0.365"/>
        <Button x:Name="btResult" Content="Me connecter à Youtube" HorizontalAlignment="Center" Margin="81,119,76,0" VerticalAlignment="Top" Width="360" Click="btResult_Click" Visibility="Hidden"/>
        <TextBlock x:Name="tblResult" HorizontalAlignment="Left" Margin="81,86,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="28" Width="360" Visibility="Hidden"/>

    </Grid>
</Window>
